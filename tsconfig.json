{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "lib",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*",
    "shared/**/**",
    "node_modules",
    "**/*.spec.ts"
  ]
}
